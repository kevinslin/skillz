{
  "name": "skillz",
  "version": "0.1.1",
  "description": "A TypeScript-based CLI that enables any LLM to understand and utilize Claude Agent Skills",
  "main": "dist/cli.js",
  "bin": {
    "skillz": "./dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/templates && cp src/templates/*.hbs dist/templates/",
    "dev": "tsx watch src/cli.ts",
    "tsc:watch": "tsc --watch",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "skills",
    "agents",
    "ai",
    "llm",
    "cli",
    "cursor",
    "aider"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "minimatch": "^9.0.3",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
